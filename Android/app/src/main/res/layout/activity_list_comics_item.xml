<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <ImageView
        android:id="@+id/activity_list_comics_item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#AAA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/activity_list_comics_item_title_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/activity_list_comics_item_image"
        android:layout_toRightOf="@+id/activity_list_comics_item_image"
        android:text="Title"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_list_comics_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_list_comics_item_date_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_list_comics_item_image"
        android:layout_alignLeft="@+id/activity_list_comics_item_title_textView"
        android:layout_alignStart="@+id/activity_list_comics_item_title_textView"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="date"
        android:textColor="#616161"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_list_comics_item_image"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/activity_list_comics_item_page_count_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_list_comics_item_image"
        android:layout_alignLeft="@+id/activity_list_comics_item_title_textView"
        android:layout_alignStart="@+id/activity_list_comics_item_title_textView"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="page"
        android:textColor="#616161"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_list_comics_item_image"
        tools:layout_editor_absoluteY="57dp" />
</android.support.constraint.ConstraintLayout>